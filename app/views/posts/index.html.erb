<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
<header class="intro-header header1" >
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
<!--                     <h1>My Private Blog</h1>
                    <hr class="small">
                    <span class="subheading">I coded this blog by myself.</span> -->
                    <br>
                    <h1></h1>
                    <br>
                    <span class="subheading"></span>
                </div>
            </div>
        </div>
    </div>
</header>

    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <%= form_tag posts_path, :method => 'get' do %>
                    <p>
                        <%= text_field_tag :search, params[:search] %>
                        <%= submit_tag "Search", :name => nil %>
                    </p>
                <% end %>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">

				<% @posts.each do |post| %>
            	<div class="post-preview">
                    <a href="post.html">
                        <h2 class="post-title">
                            <%= link_to post.title, post_path(post) %>
                        </h2>
                        <i>(<%= post.impressionist_count %> viewed)</i>
                        <!--h3 class="post-subtitle">
                            Problems look mighty small from 150 miles up
                        </h3-->
                    </a>
                    <p class="post-meta"><%= link_to "edit", edit_post_path(post) %> |
			<%= link_to "delete", post_path(post), method: :delete, data: {confirm: "Are you sure you want to delete this post?"} %></p>
                </div>
                <hr>
				<% end %>

            </div>
        </div>
    </div>
